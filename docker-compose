services:
    gateway:
      build: gateway
      image: gateway
      container_name: shareit-gateway
      ports:
        - "8080:8080"
      depends_on:
        - server
      environment:
        - SPRING_PROFILES_ACTIVE=docker
      healthcheck:
        test: [ "CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8080/actuator/health || exit 1" ]
        interval: 10s
        timeout: 5s
        retries: 3
        start_period: 40s

  server:
    build: server
    image: server
    container_name: shareit-server
    ports:
      - "9090:9090"
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - SPRING_DATASOURCE_DRIVER-CLASS-NAME=org.h2.Driver
      - SPRING_DATASOURCE_URL=jdbc:h2:mem:shareit;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
      - SPRING_DATASOURCE_USERNAME=sa
      - SPRING_DATASOURCE_PASSWORD=
      - SPRING_JPA_DATABASE-PLATFORM=org.hibernate.dialect.H2Dialect
      - SPRING_H2_CONSOLE_ENABLED=false
    restart: on-failure

